@model Refaccionaria_DB.ViewModel.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<div>
    @using (Html.BeginForm("Login", "Home"))
    {
        <div style="color:red;">@Html.ValidationSummary()</div>
        <div class="row">
            <!--Show details are saved successfully message-->
            <div class="col-lg-12">@ViewBag.Message</div>
        </div><br />

        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.correo)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.correo, new { @class = "form-control" })</div>
        </div><br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.clave)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.clave, new { @class = "form-control", type = "Password" })</div>
        </div><br />
        <input type="submit" value="Iniciar" class="btn btn-primary" />
    }

</div>